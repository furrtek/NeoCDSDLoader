      <item value="0x01">P1 vs P2</item>
      <item value="0x02">CPU vs P2</item>
      <item value="0x03">CPU vs CPU</item>
    </parameter>
    <script state="run">
      <action condition="param==00 OR ( maincpu.pb@10008D==00 AND param==03 )">maincpu.pb@100801=00</action>
