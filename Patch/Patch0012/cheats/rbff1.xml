      <action condition="(maincpu.pb@106AA2 != 00 and maincpu.pb@106AA3 == 00 and maincpu.pb@106A39 == 01)">maincpu.pb@1065E5=01</action><!--BG layers-->
      <action condition="(maincpu.pb@106AA2 != 00 and maincpu.pb@106AA3 == 00 and maincpu.pb@106A39 == 01)">maincpu.pw@401FFE=8F8F</action><!--BG colour (pink)-->
    </script>
    <script state="off">
