  <cheat desc="Hide Background"> <comment>Activate before match start</comment>
    <script state="on">
      <action>temp0=maincpu.rw@003140</action>
      <action>maincpu.rw@003140=4E71</action>
      <action>temp1=maincpu.rw@00314C</action>
      <action>maincpu.rw@00314C=4E71</action>
      <action>temp2=maincpu.rd@003152</action><!-- solid shadows -->
      <action>maincpu.rd@003152=4E714E71</action><!-- solid shadows -->
      <action>temp3=maincpu.rd@028CFE</action><!-- HUD -->
      <action>maincpu.rd@028CFE=60464E71</action><!-- HUD -->
    </script>
    <script state="run">
      <action condition="maincpu.pw@1080C4 == B">maincpu.pw@108314=0000</action><!-- activate only during match --><!-- flashing text -->
      <action condition="maincpu.pw@1080C4 == B">maincpu.pb@109179=02</action><!-- BG layers -->
      <action condition="maincpu.pw@1080C4 == B">maincpu.pd@109180=8F8F8F8F</action><!-- BG colour (pink) -->
      <action condition="maincpu.pw@1080C4 == B">maincpu.pb@10C72E=00</action><!-- flickering lifebars -->
    </script>
    <script state="off">
      <action>maincpu.rw@003140=temp0</action>
      <action>maincpu.rw@00314C=temp1</action>
      <action>maincpu.rd@003152=temp2</action>
      <action>maincpu.rd@028CFE=temp3</action>
    </script>
  </cheat>

